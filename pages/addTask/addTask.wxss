.container {
  background-color: #FFFFFF;
  min-height: 100vh;
  padding: 20px;
}

.form-item {
  margin-bottom: 20px;
}

label {
  display: block;
  margin-bottom: 8px;
  font-size: 16px;
}

input {
  width: 100%;
  height: 40px;
  border: 1px solid #ddd;
  border-radius: 4px;
  padding: 0 10px;
}

.picker {
  width: 100%;
  height: 40px;
  line-height: 40px;
  border: 1px solid #ddd;
  border-radius: 4px;
  padding: 0 10px;
}

.save-btn {
  margin-top: 30px;
  background-color: #07C160;
  color: white;
  border-radius: 8px;
  padding: 12px;
}
